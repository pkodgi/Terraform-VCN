pipeline {
    agent any
 parameters {
   withCredentials([file(credentialsId: 'terraformtrvars', variable: 'tfvars')]) {
      sh 'use $tfvars'
}
    
  }
    stages {
        stage('Init') {
            steps {
                echo 'Building..'
                sh "terraform init -input=false"
            }
        }
        stage('Plan') {
            steps {
               sh "terraform plan"
            }
        }
        stage('Apply') {
            steps {
                  sh "terraform apply--auto-approve"
            }
        }
    }
}
