pipeline {
agent any
environment {
       
        PATH = "${PATH}:${getTerraformPath()}
    }
     stages {
    
    stage('Backend-Init') {
    steps {
        
                sh "terraform init"
      
        }
    }
   
        stage('Plan') {
            steps {
               sh "terraform plan"
            }
        }
        stage('Apply') {
            steps {
                  sh "terraform apply--auto-approve"
            }
        }
    }
   }
    def getTerraformPath(){
  def tfHome = tool name: 'Terraform', type: 'org.jenkinsci.plugins.terraform.TerraformInstallation'
  return tfHome
}
